# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# JWT Secrets (Generate secure random strings)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
REFRESH_JWT_SECRET=your_refresh_secret_here_minimum_32_characters

# Authentication Configuration
BCRYPT_SALT_ROUNDS=12
COOKIE_DOMAIN=localhost
SESSION_SECRET=your_session_secret_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Application URLs
FRONTEND_URL=http://localhost:5000
SERVER_URL=http://localhost:5000
NODE_ENV=development

# Password Reset Testing Configuration
# Options: console (log to console), response (include in API response for testing), none (no output)
TOKEN_EXPOSE_MODE=console

# Token Expiration Settings (in minutes for reset, hours for email verification)
TOKEN_TTL_EMAIL_HOURS=24
TOKEN_TTL_RESET_MIN=30

# Port Configuration
PORT=5000

# Optional: Cloud Storage
B2_ENDPOINT=
B2_ACCESS_KEY_ID=
B2_SECRET_ACCESS_KEY=
B2_BUCKET_NAME=

# Optional: External APIs
DEEPSEEK_API_KEY=
OPENAI_API_KEY=
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=